<% if notice != nil %>
  <p id="notice" class="alert alert-success alert-dismissable" role="alert">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= notice %>
  </p>
<% end %>


<h1>Students</h1>

<div class="row">
<div class="col-md-4 col-md-offset-4 text-center">
<%= link_to 'New Student', new_student_path, class: "btn btn-info" %>
</div>
</div> 

<br>

<div class="row">
  <% @students.each do |student| %>
    <div class="col-md-3">
      <div class="well">
        <% if student.avatar_file_name != nil %>
          <%= image_tag student.avatar.url(:medium), class: "img-responsive" %>
        <% end %>
        <h2><%= "#{student.name}" %></h2>
        <p>Age: <%= student.age %></p>
        <p>Interests: <%= student.interests %></p>
        <p><%= link_to 'Show', student, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_student_path(student), class: "btn btn-warning" %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
      </div>
    </div>
  <% end %>
</div>